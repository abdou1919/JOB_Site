
<!DOCTYPE html>
<html>
<head>





    <meta name="viewport" content="wdth=device-width" />
    <title>@Page.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/934239c3f0.js" crossorigin="anonymous"></script>

</head>




<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top ">
        <a class="navbar-brand" href="#"><i class="glyphicon euro"></i><span class="glyphicon glyphicon-cloud"></span>JOB</a>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse " id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item ">
                    <a class="nav-link " href="~/home/index"><i class="fas fa-home"></i> Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Offers</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">About us</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Contact us</a>
                </li>





                @if (User.IsInRole("Admin"))

                {



                    <div class="btn-group">
                        <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Spazio Admin
                        </button>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="~/Account/GetAllUser">Gestione degli Utenti</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="~/roles/index">Gestione dei Ruoli</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="~/categories/index">Gestione delle Categorie</a>

                        </div>
                    </div>

                }

                @if (User.IsInRole("Azienda"))

                {<div class="btn-group">
                        <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Spazio Azienda
                            </button>
                            <div class="dropdown-menu">
                            <a class="dropdown-item" href="~/Home/GetAllJobByOff">Gestione Job</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="~/Home/GetJoByOff">Richieste di lavoro</a>
                            <div class="dropdown-divider"></div>


                        </div>
                    </div> }
                    










            </ul>

            @*Partial view*@


            <span class="navbar-right ">

                @Html.Partial("_Login")

            </span>



        </div>
    </nav>




    <div class="row">
        <div class="container col-10" style="margin-bottom:50px;margin-top:60px">
            @RenderBody()
        </div>
    </div>





    <!-- Footer -->
    <footer class="page-footer font-small blue bg-primary fixed-bottom ">

        <!-- Copyright -->
        <div class="footer-copyright text-center py-3 text-white">
            © 2020 Copyright:
            <a href="#" class="text-white"> Job.com</a>
        </div>
        <!-- Copyright -->

    </footer>






    <script src="~/Scripts/jquery.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    @RenderSection("scripts", required: false)

</body>


</html>
